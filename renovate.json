{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:monorepos"
  ],
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "enabledManagers": ["cargo", "npm"],
  "packageRules": [
    {
      "lockFileMaintenance": { "enabled": true }
    },
    {
      "matchManagers": ["npm"],
      "addLabels": ["typescript"]
    },
    {
      "matchManagers": ["cargo"],
      "addLabels": ["rust"]
    }
  ],
  "vulnerabilityAlerts": {
    "addLabels": ["security"],
    "assignees": ["@crapstone"]
  }
}
